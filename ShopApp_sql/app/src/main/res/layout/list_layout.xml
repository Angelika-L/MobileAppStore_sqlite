<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="167dp" >

        <TextView
            android:id="@+id/textViewNameProduct"
            android:layout_width="98dp"
            android:layout_height="43dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="278dp"
            android:layout_marginBottom="86dp"
            android:text="Nazwa Produktu"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="47dp"
            android:layout_height="28dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="182dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="182dp"
            android:layout_marginBottom="97dp"
            android:text="Cena"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textViewQuantity"
            android:layout_width="41dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="138dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="232dp"
            android:layout_marginBottom="100dp"
            android:text="Ilość"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="#000000"
            android:textSize="17sp" />

        <Button
            android:id="@+id/ZapiszButton"
            android:layout_width="62dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="335dp"
            android:layout_marginTop="77dp"
            android:onClick="clickEdite"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="57dp"
            android:text="Edytuj"
            android:textSize="10sp" />

        <Button
            android:id="@+id/UsunButton"
            android:layout_width="62dp"
            android:layout_height="33dp"
            android:onClick="clickDelete"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="261dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="57dp"
            android:text="Usuń"
            android:textSize="10sp" />

        <CheckBox
            android:id="@+id/CzyKupioneChackbox"
            android:layout_width="118dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="263dp"
            android:layout_marginTop="33dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="93dp"
            android:text="Czy kupione?" />

        <TextView
            android:id="@+id/IdProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="36dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="316dp"
            android:layout_marginBottom="66dp"
            android:hint="IdItem"
            android:text="ID:" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="300dp"
            android:layout_marginBottom="66dp"
            android:hint="TextView" />

    </RelativeLayout>


</LinearLayout>